package embox.cmd.hw

@AutoCmd
@Cmd(name = "lshw",
    help = "Show hardware configuration and properties",
	man = '''
	NAME
       lshw - Show hardware configuration and properties
    SYNOPSIS
       lshw [ options ]
    DESCRIPTION
       lshw  lists  information  about  all  available or the specified hardware
	OPTIONS
			-h
				Shows usage
	SEE ALSO
			lshw
	AUTHORS
			Anton Bondarev
            Avinal Kumar
	''')
module lshw {
	source "lshw.c"

    @NoRuntime depends embox.driver.usb.core

    depends embox.compat.libc.all
	depends embox.driver.pci
	depends embox.framework.LibFramework

    depends embox.driver.input.core
}
